{
  "$schema": "..\\..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "sourceRoot": "libs/sound-context/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/sound-context",
        "main": "libs/sound-context/src/index.ts",
        "tsConfig": "libs/sound-context/tsconfig.lib.json",
        "assets": ["libs/sound-context/*.md"]
      }
    },
    "build-es": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "libs/sound-context/package.esm.json",
        "outputPath": "dist/libs/sound-context-es",
        "compiler": "swc",
        "entryFile": "libs/sound-context/src/index.ts",
        "tsConfig": "libs/sound-context/tsconfig.lib.json",
        "rollupConfig": ["libs/sound-context/rollup.config.cjs"],
        "assets": [
          {
            "glob": "libs/sound-context/*.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "libs/sound-context/src/index.html",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "serve": {
          "watch": true,
          "assets": []
        }
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs sound-context {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "publish-es": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish-es.mjs sound-context {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-es"
        }
      ]
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-run-all --parallel \"serve ./dist/libs/sound-context-es\" \"nx run sound-context:build-es:serve\""
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-es"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/sound-context/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/sound-context"],
      "options": {
        "jestConfig": "libs/sound-context/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["sound-context"]
}
