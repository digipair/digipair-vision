{
  "$schema": "..\\..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "sourceRoot": "libs/room/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/room",
        "main": "libs/room/src/index.ts",
        "tsConfig": "libs/room/tsconfig.lib.json",
        "assets": ["libs/room/*.md"]
      }
    },
    "build-es": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "libs/room/package.esm.json",
        "outputPath": "dist/libs/room-es",
        "compiler": "swc",
        "entryFile": "libs/room/src/index.ts",
        "tsConfig": "libs/room/tsconfig.lib.json",
        "rollupConfig": ["libs/room/rollup.config.cjs"],
        "assets": [
          {
            "glob": "libs/room/*.md",
            "input": ".",
            "output": "."
          },
          {
            "glob": "libs/room/src/index.html",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "serve": {
          "watch": true,
          "assets": []
        }
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs room {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "publish-es": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish-es.mjs room {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-es"
        }
      ]
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm-run-all --parallel \"serve ./dist/libs/room-es\" \"nx run room:build-es:serve\""
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build-es"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/room/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/room"],
      "options": {
        "jestConfig": "libs/room/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["room"]
}
