{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@digipair-xr/camrender": ["libs/camrender/src/index.ts"],
      "@digipair-xr/core": ["libs/core/src/index.ts"],
      "@digipair-xr/design-system": ["libs/design-system/src/index.ts"],
      "@digipair-xr/exporter": ["libs/exporter/src/index.ts"],
      "@digipair-xr/html": ["libs/html/src/index.ts"],
      "@digipair-xr/info": ["libs/info/src/index.ts"],
      "@digipair-xr/mesh": ["libs/mesh/src/index.ts"],
      "@digipair-xr/observe": ["libs/observe/src/index.ts"],
      "@digipair-xr/player": ["libs/player/src/index.ts"],
      "@digipair-xr/ready-player-me": ["libs/ready-player-me/src/index.ts"],
      "@digipair-xr/router": ["libs/router/src/index.ts"],
      "@digipair-xr/scene": ["libs/scene/src/index.ts"],
      "@digipair-xr/screen-shared": ["libs/screen-shared/src/index.ts"],
      "@digipair-xr/spline": ["libs/spline/src/index.ts"],
      "@digipair-xr/teleport": ["libs/teleport/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
